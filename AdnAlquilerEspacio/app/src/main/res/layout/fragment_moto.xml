<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="existeMoto"
            type="boolean" />

        <variable
            name="viewModel"
            type="com.adn.adnalquilerparqueadero.infraestructura.viewModel.AlquilerMotosListViewModel" />
        <variable
            name="callback"
            type="com.adn.adnalquilerparqueadero.utilities.Callback" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentacion.fragmentos.MotoFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="3"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp"
            tools:listitem="@layout/motocicleta_item">


        </androidx.recyclerview.widget.RecyclerView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:isGone="@{existeMoto}">

            <TextView
                android:id="@+id/empty_garden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay motocicletas"
                android:textAppearance="?attr/textAppearanceHeadline5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_plant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:text="Agregar moto"
                app:backgroundTint="?attr/colorOnPrimary"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:onClick="@{() -> callback.click()}"
            app:layout_constraintVertical_bias="0.982"
            app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>